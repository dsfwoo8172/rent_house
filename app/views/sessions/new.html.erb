
<%= form_with url: user_sign_in_path, html: {class: 'w-50 mx-auto pt-5'} do |f| %>
<h1 class="text-center">登入</h1>
<div class="mb-3">
  <%= f.label :email, '信箱' %>
  <%= f.text_field :email, class: 'form-control', placeholder: 'Steven@gmail.com' %>
</div>
<div class="mb-3">
  <%= f.label :password, '密碼' %>
  <%= f.password_field :password, class: 'form-control', placeholder: '密碼'  %>
</div>
<%= f.button '登入', class: 'btn btn-primary' %>
<% end %>