<div class="bg-light py-4">
  <div class="container px-0">
    <div class="d-flex w-50">
      <%= search_form_for @search, html: {class: 'd-flex w-100'} do |f| %>
        <%= f.search_field :county_or_area_or_address_cont, class: 'border w-100 px-3', placeholder: '請輸入關鍵字 (縣市、區域、地址等...)' %>
        <%= f.button class: 'py-1 search-btn' do %>
          <i class="fas fa-search me-2"></i>搜尋
        <% end %>
      <% end %>
    </div>
  </div>
</div>